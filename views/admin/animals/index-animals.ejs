<!DOCTYPE html>
<html lang="en">

<%- include('../../partials/head') %>

    <body>
        <div class="animal-list-container mt-5">
            <h1 class="animal-list-title mb-4 text-center">Lista degli Animali</h1>
            <table class="animal-list-table table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Specie</th>
                        <th>Razza</th>
                        <th>Et√†</th>
                        <th>Genere</th>
                        <th>Stato di Salute</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    <% animals.forEach(animal=> { %>
                        <tr>
                            <td>
                                <%= animal.name %>
                            </td>
                            <td>
                                <%= animal.species %>
                            </td>
                            <td>
                                <%= animal.breed %>
                            </td>
                            <td>
                                <%= animal.age %>
                            </td>
                            <td>
                                <%= animal.gender %>
                            </td>
                            <td>
                                <%= animal.healthStatus %>
                            </td>
                            <td class="text-center">
                                <a href="/dashboard/animals/<%= animal._id %>" class="btn btn-info btn-sm">Vedi
                                    Dettagli</a>
                                <a href="/dashboard/animals/<%= animal._id %>/edit-animals"
                                    class="btn btn-warning btn-sm">Modifica</a>
                                <form action="/dashboard/animals/<%=animal._id%>/delete?_method=DELETE" method="POST"
                                    class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Elimina</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <div class="animal-list-create text-center mt-4">
                <a href="/dashboard/animals/add-animals" class="btn btn-success">Crea un nuovo animale</a>
            </div>
        </div>
    </body>

</html>